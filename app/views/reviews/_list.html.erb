<% if @reviews.blank? %>
  <div class="test-center">
    <h4>There are no reviews yet</h4>
  </div>
<% else %>

  <% @reviews.order("id desc").each do |r| %>
  <hr>
    <div class="row">
      <div class="col-md-1">
        <%= link_to r.user do %>
          <%= image_tag avatar_url(r.user), class: "img-circle avatar-medium" %>
        <% end %>
      </div>
      <div class="col-md-11">
        <div>
          <strong><%= r.user.fullname %> <div id="stars_<%= r.id %>"></div></strong>
          <span class="pull-right">
            <% if current_user && r.user == current_user %>
              <%= link_to "Remove", [@room, r], method: :delete, data: { confirm: "Are you sure?" } %>
            <% end %>
          </span>
        </div>
        <div><%= r.created_at.strftime("%D") %></div>
        <div><%= r.comment %></div>
      </div>
    </div>
    <script>
      $("#stars_<%= r.id %>").raty({
        path: '/assets',
        readOnly: true,
        score: <%= r.star %>
      });
    </script>

  <% end %>
<% end %>
